{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "verite-messenger",
  "version": "0.1.0",
  "identifier": "com.verite-messenger.app",
  "build": {
    "beforeDevCommand": "npm run web",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build:web",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [{ "title": "verite-messenger", "width": 800, "height": 600 }],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
